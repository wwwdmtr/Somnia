generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    nickname  String   @unique
    password  String
    createdAt DateTime @default(now())
}

model Dream {
    id          String   @id @default(uuid())
    nickname    String?
    title       String
    description String
    text        String
    createdAt   DateTime @default(now())
}
